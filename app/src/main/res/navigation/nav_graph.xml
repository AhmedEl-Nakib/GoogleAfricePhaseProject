<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.googleafricephaseproject.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_home2"
            app:destination="@id/home2"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/home2"
        android:name="com.example.googleafricephaseproject.ui.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home2_to_projectSubmissionFragment"
            app:destination="@id/projectSubmissionFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/projectSubmissionFragment"
        android:name="com.example.googleafricephaseproject.ui.projectSubmission.ProjectSubmissionFragment"
        android:label="fragment_project_submission"
        tools:layout="@layout/fragment_project_submission" />
    <fragment
        android:id="@+id/learningLeadersFragment"
        android:name="com.example.googleafricephaseproject.ui.learningLeaders.LearningLeadersFragment"
        android:label="fragment_learning_leaders"
        tools:layout="@layout/fragment_learning_leaders" />
    <fragment
        android:id="@+id/skillIQLeadersFragment"
        android:name="com.example.googleafricephaseproject.ui.skillIQ.SkillIQLeadersFragment"
        android:label="fragment_skill_i_q_leaders"
        tools:layout="@layout/fragment_skill_i_q_leaders" />
</navigation>